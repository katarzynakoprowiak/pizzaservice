<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pizzaservice.javafx.SelectUserController">

    <children>
        <Label text="Select user:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <ComboBox fx:id="userCombo" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
        <HBox GridPane.rowIndex="2" GridPane.columnSpan = "2" >
            <children>
                <Button onAction="#selectAction" text="Select" />
                <Button onAction="#searchAction" text="Search" />
                <Button onAction="#addAction" text="Add" />
            </children>
        </HBox>
    </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
